@model MovieMVC.Models.Genre
@{
    ViewBag.Title = "Add Genre";
}
<div class="card">
    <div class="card-header">Add Genre</div>
    <div class="card-body">
        <form asp-action="create" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label asp-for="GenreName" class="form-label"></label>
                <input type="text" class="form-control" asp-for="GenreName" maxlength="30" />
                <span class="text-danger" asp-validation-for="GenreName"></span>
            </div>
            <div>
                <a class="btn btn-secondary" asp-action="index">Back</a>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>
