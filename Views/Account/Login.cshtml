@model MovieMVC.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
}
<div class="card">
    <div class="card-body">
        <div class="card-title"><h3>Login</h3></div>
        <form asp-action="login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label class="form-label" asp-for="Email"></label>
                <input type="text" class="form-control" asp-for="Email" />
                <span class="invalid-feedback" asp-validation-for="Email"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Password"></label>
                <input type="password" class="form-control" asp-for="Password" />
                <span class="invalid-feedback" asp-validation-for="Password"></span>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>
@section Scripts{
    @await Html.PartialAsync("_ValidationScripts")
}